@{
    Layout = null;
    var errorMessage = ViewBag.Message as string;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Adminsitration </title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/admin.css" />
    <link rel="stylesheet" href="~/Plugins/font-awesome/css/font-awesome.min.css" />

</head>
<body>
    <div id="wrapper">

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-2">

                </div>
                <div class="col-lg-5">
                    <form action="@Url.Action("LogIn")" role="form" method="POST">

                        <div class="form-group">
                            <label for="Email">
                                Username
                            </label>
                            <div>
                                <input type="text" class="form-control" name="Email" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Password">
                                Password
                            </label>
                            <div>
                                <input type="password" class="form-control" name="Password" />
                            </div>
                        </div>
                        
                        @if (errorMessage != null)
                        {
                            <div class="form-group">
                                <span class="field-validation-error"> @errorMessage </span>
                            </div>
                        }

                        <button type="submit" class="btn btn-default"> Log In </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

