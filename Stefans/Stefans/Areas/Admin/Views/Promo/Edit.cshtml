@using Stefans.Reusable
@section CSS{

}

@section JS{

}

@model Core.CM.PromoImage

<div class="frontPageEdit-wrapper">
    <form role="form" action="@Url.Action("Edit", "Promo")" method="post" enctype="multipart/form-data">
        <input type="hidden" name="ID" value="@Model.ID">
        <input type="hidden" name="Image" value="@Model.Image">
        <div class="col-sm-12">
            <div class="row">
                <div class="form-group col-sm-4">

                    <label for="PromoName">Name</label>
                    @Html.TextBoxFor(m => m.PromoName, new { placeholder = "First Name", @class = "form-control" })

                    <div style="color: red;" class="text-left">
                        @Html.ValidationMessageFor(model => model.PromoName)
                    </div>

                </div>
                <div class="col-sm-8"></div>
            </div>

            @if (Model.Image != null)
            { 
                <div class="form-group">
                    <img src=@Url.Content(ConfigAssistant.PromosFolderRelativePath + Model.Image) width="350" height="200" class="img-rounded" />
                </div>
            }
            
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="ImageFile">

                <div style="color: red;" class="text-left">
                    @Html.ValidationMessageFor(model => model.Image)
                </div>

            </div>

            <div class="row">
                <div class="form-group col-sm-4">

                    <label for="SortIndex">Sort Index</label>
                    @Html.TextBoxFor(m => m.SortIndex, new { placeholder = "Sort Index", @class = "form-control" })


                </div>

                <div class="col-sm-8"></div>
            </div>
            <button type="submit" class="btn btn-danger">Save</button>
        </div>

        @if (@ViewBag.TSP_Error != null)
        {
            <div class="col-sm-12">
                <div class="alert alert-warning alert-dismissable">
                    <p>@ViewBag.TSP_Error</p>
                </div>
            </div>
        }
    </form>


</div>