        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Main")"> Administration </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    
                    <li>
                        <a href="@Url.Action("Index", "Product")">
                            <i class="fa fa-table"></i> Products 
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Testimonials", "Product")">
                            <i class="fa fa-table"></i> Product Testimonials 
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "Order")">
                            <i class="fa fa-table"></i> Orders
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "Dictionary")">
                            <i class="fa fa-table"></i> Dictionaries
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "Contacts")">
                            <i class="fa fa-table"></i> Contacts
                        </a>
                    </li>

                    
                </ul>

                
            </div>
        </nav>

        <div id="page-wrapper">
            @RenderBody()
        </div>
    </div>
</body>
</html>
