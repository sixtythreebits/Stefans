@using System.Web.UI.WebControls
@using DevExpress.Data

@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "GridView";
        settings.CallbackRouteValues = new { Controller = "Contacts", Action = "ContactsGrid" };

        settings.Width = Unit.Percentage(100);
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.KeyFieldName = "ID";
                
        settings.Columns.Add("ID");
        settings.Columns.Add(c =>
        {
            c.FieldName = "CRTime";
            c.Caption = "Time Created";                       
            c.Width = 100;            
            c.PropertiesEdit.DisplayFormatString = @ViewBag.DateFormat;
        });
        settings.Columns.Add(c =>{
            c.FieldName = "Email";
            c.Caption = "Email";
            c.Width = 100;
        });            
        settings.Columns.Add("FirstName").Caption = "First Name";
        settings.Columns.Add("LastName").Caption = "Last Name";
        settings.Columns.Add("Phone").Caption = "Phone";
        settings.Columns.Add("City").Caption = "City";        
        settings.Columns.Add("StateCaption").Caption = "State";
        settings.Columns.Add("TopicCaption").Caption = "Topic";
        settings.Columns.Add(c =>{
             c.FieldName = "LicensedHairCareProfessional";
             c.Caption = "Is Professional";
             c.Width = 50;
        });           
        settings.Columns.Add(c =>
        {
            c.FieldName = "Message";
            c.Caption = "Message";
            c.Width = 500;
        });

        settings.SettingsPager.Visible = true;   
        
    });
}
@grid.Bind(Model).GetHtml()